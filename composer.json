{
    "name": "sfi/sfi-distr",
    "description" : "TYPO3 Neos Distribution for Sfi.ru",
    "license": "GPL-3.0+",
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin"
    },
    "repositories": [
        { "type": "git", "url": "https://github.com/sfi-ru/Sfi.Styleguide.git" },
        { "type": "git", "url": "https://github.com/sfi-ru/Sfi.Shared.git" },
        { "type": "git", "url": "https://github.com/sfi-ru/Sfi.News.git" },
        { "type": "git", "url": "https://github.com/sfi-ru/Sfi.Grid.git" }
    ],
    "require": {
        "typo3/neos": "2.1.x-dev",
        "typo3/neos-nodetypes": "2.1.x-dev",

        "neos/diff": "@dev",
        "typo3/flow": "3.1.x-dev",
        "typo3/eel": "3.1.x-dev",
        "typo3/fluid": "3.1.x-dev",
        "typo3/party": "@dev",
        "typo3/kickstart": "3.1.x-dev",
        "typo3/imagine": "@dev",
        "typo3/media": "@dev",
        "typo3/form": "@dev",
        "typo3/setup": "@dev",
        "typo3/typo3cr": "@dev",
        "typo3/typoscript": "@dev",

        "sfi/shared": "@dev",
        "sfi/news": "@dev",
        "sfi/styleguide": "@dev",
        "sfi/grid": "@dev",
        "m12/neos-plugin-dbexport": "dev-master"
    },

    "require-dev": {
        "typo3/buildessentials": "3.1.x-dev",
        "mikey179/vfsstream": "~1.6",
        "phpunit/phpunit": "~4.8 || ~5.0",
        "flowpack/behat": "dev-master"
    },
    "suggest": {
        "ext-pdo_sqlite": "For running functional tests out-of-the-box this is required"
    },
    "scripts": {
        "post-update-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update":"TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install":"TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall"
    }
}
